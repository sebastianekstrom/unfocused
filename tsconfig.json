{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6", "es2015", "es2016", "es2017", "es2018", "dom"],
    "module": "commonjs",
    "noUnusedParameters": true,
    "declaration": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "target": "es6",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": "./src",
    "rootDir": "./src"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx"]
}
